        "agent::NewExternalAgentThread",
        { "agent": "gemini" },
      ],
      "ctrl-alt-cmd-c": [
        "agent::NewExternalAgentThread",
        { "agent": "claude_code" },
      ],
      "ctrl-alt-cmd-o": ["agent::NewExternalAgentThread", { "agent": "codex" }],
    },
  },
  {
