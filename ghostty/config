# https://ghostty.org/docs/config

# shift+command+, to reload config
# command+Enter = toggle fullscreen!!
# ctrl+alt+super+space = toggle quick terminal
# option-click to navigate command line!!


# theme
theme = Catppuccin Mocha


# startup command - attach to or create tmux session
# Try to attach to any session, or create 'main' if none exist
# broken: command = /opt/homebrew/bin/tmux attach || /opt/homebrew/bin/tmux new-session -s main
# command = /opt/homebrew/bin/tmux new-session -A -s main

# ghostty supports nerd fonts natively.
#   Hasklug Nerd Font Mono -> Hasklig Font Mono
#
# Variable fonts: Monaspace Argon, Krypton, Neon, Radon, Xenon
#   wght (weight), slnt (slant), ital (italic),
#   opsz (optical size), wdth (width), GRAD (gradient)
font-family = Monaspace Neon Var
font-size = 18
font-variation = wght=400
font-variation-bold = wght=700


# spacing
adjust-cell-width = 0%
adjust-cell-height = 0%
# adjust-icon-height = -30%


# cursor - block, bar, underline, block_hollow
cursor-style = bar
cursor-style-blink = false
cursor-click-to-move = true
cursor-color = ff5524
cursor-opacity = 1


# window
macos-icon = glass
window-padding-x = 30
window-padding-y = 15
window-padding-balance = true
macos-window-shadow = false
quit-after-last-window-closed = true
macos-titlebar-style = transparent
macos-titlebar-proxy-icon = hidden
title = " "


# background
background-opacity = 1
# false, true, 0 to 20
background-blur = false


# selection
copy-on-select = clipboard
selection-background = 004d89
selection-foreground = e0e7ed


# splits
split-divider-color = 083e6c
# native ghostty splits (replaced with tmux splits)
# keybind = super+slash=new_split:down
# keybind = super+backslash=new_split:right
keybind = super+slash=text:\x02"
keybind = super+backslash=text:\x02%

# native ghostty split navigation (replaced with tmux navigation)
# keybind = shift+left=goto_split:left
# keybind = shift+down=goto_split:down
# keybind = shift+up=goto_split:up
# keybind = shift+right=goto_split:right
keybind = shift+left=text:\x02\x1b[D
keybind = shift+down=text:\x02\x1b[B
keybind = shift+up=text:\x02\x1b[A
keybind = shift+right=text:\x02\x1b[C
keybind = ctrl+enter=toggle_split_zoom
focus-follows-mouse = true


# quick terminal
keybind = global:alt+enter=toggle_quick_terminal
quick-terminal-position = center
# quick-terminal-size = 50%

# Keybindings
keybind = shift+enter=text:\n
keybind = super+k=text:\x0c

# ctrl+number for tmux window switching (CSI u encoding)
keybind = ctrl+one=text:\x1b[49;5u
keybind = ctrl+two=text:\x1b[50;5u
keybind = ctrl+three=text:\x1b[51;5u
